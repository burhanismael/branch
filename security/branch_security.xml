<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.module.category" id="module_branch_management">
            <field name="name">Branch</field>
            <field name="sequence">11</field>
        </record>
        <!--        Category for the branch wise data-->
        <record model="ir.module.category" id="branch_wise_categ">
            <field name="name">Branch Wise Category</field>
            <field name="description">All Branch wise Groups will be in it</field>
            <field name="sequence">12</field>
        </record>
        <!--            1-->
        <!--        if apply this group purchase order will be branch wise for that user-->
        <record id="branch_wise_purchase_order" model="res.groups">
            <field name="name">Purchase Order(Branch wise) ?</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="branch_wise_categ"/>
        </record>
        <record id="purchase_branch_rule" model="ir.rule">
            <field name="name">Purchase Order Branch</field>
            <field name="model_id" ref="model_purchase_order"/>
            <field name="domain_force">['|',('branch_id','=',False),('branch_id','=',user.branch_id.id)]</field>
            <field name="groups" eval="[(4, ref('branch.branch_wise_purchase_order'))]"/>
        </record>
        <!--            2-->
        <!--        if apply this group Sale order will be branch wise for that user-->
        <record id="branch_wise_sale_order" model="res.groups">
