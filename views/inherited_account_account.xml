<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherited_account_account_form_view" model="ir.ui.view">
        <field name="name">inherited.account.account.form.view</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='allowed_journal_ids']"
                   position="after">
                <field name="branch_id" string="Branch" options="{'no_open': True, 'no_create': True}"/>
            </xpath>
        </field>
    </record>

</odoo>